FOR i:=0 TO iterations_per_test BY 1 do
	P_Pres0.CurrentValue := 250;
	P_Pres1.CurrentValue := TRUNC(3500*i/iterations_per_test);
	P_Pres2.CurrentValue := TRUNC(3500*i/iterations_per_test);
	P_Pres3.CurrentValue := TRUNC(3500*i/iterations_per_test);
	P_Pres4.CurrentValue := TRUNC(3500*i/iterations_per_test);
	P_Tem0.CurrentValue := 25;
	P_Tem1.CurrentValue := 25;
	P_Tem2.CurrentValue := 25;
	P_Tem3.CurrentValue := 25;
	P_Tem4.CurrentValue := 25;
	B_Tem0.CurrentValue := 25;
	B_Tem1.CurrentValue := 25;
end_for;

//standby
FOR i:=0 TO iterations_per_test/3 BY 1 DO
    B_Pres0.CurrentValue := 100;
	B_Pres1.CurrentValue := 100;
	B_Pres2.CurrentValue := 14;
	B_Pres3.CurrentValue := 14;
	B_Pres4.CurrentValue := 160;
END_FOR;
//breaking
FOR i := 0 TO iterations_per_test/3 BY 1 DO
    B_Pres0.CurrentValue := 100;
	B_Pres1.CurrentValue := 100;
	B_Pres2.CurrentValue := 1900;
	B_Pres3.CurrentValue := 1900;
	B_Pres4.CurrentValue := 120;
END_FOR;

//cooldown
FOR i := 0 TO iterations_per_test/3 BY 1 DO
    B_Pres0.CurrentValue := 100;
	B_Pres1.CurrentValue := 100;
	B_Pres2.CurrentValue := 5;
	B_Pres3.CurrentValue := 5;
	B_Pres4.CurrentValue := 120;
END_FOR;
